@model FinalProjectLibrary.Models.BookingSlot

@{
    ViewData["Title"] = "Edit Booking Slot";
}

<h1>Edit Booking Slot</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <input asp-for="BookingSlotId" class="form-control" type="hidden" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SlotTime" class="control-label"></label>*
                <input asp-for="SlotTime" class="form-control" type="datetime-local" required />
                <span asp-validation-for="SlotTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Restaurant</label>*
                <select class="form-control" asp-for="RestaurantId" required>
                    @foreach (var item in Model.RestaurantsDropdown)
                    {
                        <option value=@item.RestaurantId>@item.RestaurantName</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

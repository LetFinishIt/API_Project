@model FinalProjectLibrary.Models.Restaurant

@{
    ViewData["Title"] = "Edit Restaurant";
}

<h1>Edit Restaurant</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <input asp-for="RestaurantId" class="form-control" type="hidden" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RestaurantName" class="control-label"></label>*
                <input asp-for="RestaurantName" class="form-control" required />
                <span asp-validation-for="RestaurantName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="RestaurantAddress" class="control-label"></label>*
                <input asp-for="RestaurantAddress" class="form-control" required />
                <span asp-validation-for="RestaurantAddress" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="RestaurantCity" class="control-label"></label>*
                <input asp-for="RestaurantCity" class="form-control" required />
                <span asp-validation-for="RestaurantCity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CuisineType" class="control-label"></label>*
                <input asp-for="CuisineType" class="form-control" required />
                <span asp-validation-for="CuisineType" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
